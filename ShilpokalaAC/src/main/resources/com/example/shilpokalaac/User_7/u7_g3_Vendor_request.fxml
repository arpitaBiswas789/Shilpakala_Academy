<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project_by_pushon.U7G3VendorRequest">
    <Label layoutX="200.0" layoutY="20.0" text="Vendor Request Form">
        <font>
            <Font size="16.0" />
        </font>
    </Label>

    <Label layoutX="50.0" layoutY="60.0" text="Vendor Name:" />
    <TextField fx:id="vendorNameField" layoutX="150.0" layoutY="60.0" prefWidth="200.0" />

    <Label layoutX="50.0" layoutY="100.0" text="Service Type:" />
    <ComboBox fx:id="serviceTypeCombo" layoutX="150.0" layoutY="100.0" prefWidth="200.0" promptText="Select Service Type" />

    <Label layoutX="50.0" layoutY="140.0" text="Cost ($):" />
    <TextField fx:id="costField" layoutX="150.0" layoutY="140.0" prefWidth="200.0" />

    <Label layoutX="50.0" layoutY="180.0" text="Request Date:" />
    <DatePicker fx:id="requestDatePicker" layoutX="150.0" layoutY="180.0" prefWidth="200.0" />

    <Button layoutX="150.0" layoutY="220.0" onAction="#submitRequestONA" text="Submit Vendor Request" />

    <Label layoutX="200.0" layoutY="350.0" text="Admin Approval Page">
        <font>
            <Font size="16.0" />
        </font>
    </Label>

    <TableView fx:id="vendorTV" layoutX="50.0" layoutY="380.0" prefHeight="200.0" prefWidth="500.0">
        <columns>
            <TableColumn fx:id="vendorNameTC" prefWidth="125.0" text="Vendor Name" />
            <TableColumn fx:id="requestDetailsTC" prefWidth="125.0" text="Service Type" />
            <TableColumn fx:id="costTC" prefWidth="125.0" text="Cost ($)" />
            <TableColumn fx:id="dateTC" prefWidth="125.0" text="Date" />
        </columns>
    </TableView>

    <Button layoutX="150.0" layoutY="640.0" onAction="#approveRequestONA" prefWidth="120.0" text="Approve Request" />
    <Button layoutX="300.0" layoutY="640.0" onAction="#rejectRequest" prefWidth="120.0" text="Reject Request" />
</AnchorPane>