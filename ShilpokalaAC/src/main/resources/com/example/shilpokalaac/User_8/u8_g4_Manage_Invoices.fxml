<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project_by_pushon.U8G4ManageInvoices">
    <Label layoutX="245.0" layoutY="29.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Manage Vendor Invoices" />

    <Label layoutX="30.0" layoutY="110.0" text="Invoice Details:">
      <font>
         <Font size="15.0" />
      </font></Label>
    <TextField fx:id="invoiceDetailsTF" layoutX="150.0" layoutY="106.0" prefWidth="220.0" promptText="Enter or view invoice details" />

    <Label layoutX="30.0" layoutY="150.0" text="Amount Due:">
      <font>
         <Font size="15.0" />
      </font></Label>
    <TextField fx:id="amountTF" layoutX="150.0" layoutY="146.0" prefWidth="220.0" promptText="Enter amount due" />

    <ComboBox fx:id="pdfFilesCB" layoutX="402.0" layoutY="106.0" prefWidth="220.0" promptText="Select a PDF file" />
    <Button layoutX="150.0" layoutY="230.0" onAction="#savepdfONA" prefWidth="120.0" text="Save Invoice" />
    <Label fx:id="confirmationLabel" layoutX="30.0" layoutY="265.0" prefHeight="25.0" prefWidth="500.0" />

    <TableView fx:id="invoicesTable" layoutX="30.0" layoutY="300.0" prefHeight="180.0" prefWidth="640.0">
        <columns>
            <TableColumn fx:id="vendorNameColumn" prefWidth="320.0" text="Vendor" />
            <TableColumn fx:id="amountDueColumn" prefWidth="320.0" text="Amount Due" />
        </columns>
    </TableView>
</AnchorPane>
