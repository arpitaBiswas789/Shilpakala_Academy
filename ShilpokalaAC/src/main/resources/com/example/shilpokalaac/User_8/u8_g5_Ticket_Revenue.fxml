    </TableView>

    <Label layoutX="72.0" layoutY="430.0" text="Total Revenue:">
      <font>
         <Font size="18.0" />
      </font>
    </Label>
    <TextField fx:id="revenueTF" editable="false" layoutX="223.0" layoutY="431.0" prefHeight="25.0" prefWidth="174.0" />
    <Label fx:id="notificationLabel" layoutX="53.0" layoutY="470.0" prefHeight="40.0" prefWidth="420.0" />
