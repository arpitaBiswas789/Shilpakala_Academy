    <Label layoutX="330.0" layoutY="70.0" text="Date:">
      <font>
         <Font size="14.0" />
      </font>
    </Label>
    <DatePicker fx:id="dateDP" layoutX="375.0" layoutY="68.0" prefWidth="150.0" />

    <Label layoutX="30.0" layoutY="110.0" text="Quantity:">
      <font>
         <Font size="14.0" />
