<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project_by_pushon.U8G2FinancialReports">
    <Label layoutX="237.0" layoutY="26.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Generate Financial Reports" />
    <Label layoutX="30.0" layoutY="70.0" text="Report Period:">
      <font>
         <Font size="15.0" />
      </font></Label>
    <ComboBox fx:id="reportPeriodCB" layoutX="140.0" layoutY="66.0" prefWidth="210.0" />

    <TableView fx:id="reportsTV" layoutX="30.0" layoutY="110.0" prefHeight="200.0" prefWidth="640.0">
        <columns>
            <TableColumn fx:id="reportIdTC" prefWidth="100.0" text="Report ID" />
            <TableColumn fx:id="reportPeriodTC" prefWidth="150.0" text="Report Period" />
            <TableColumn fx:id="totalRevenuetTC" prefWidth="120.0" text="Revenue" />
            <TableColumn fx:id="totalExpensesTC" prefWidth="120.0" text="Expenses" />
            <TableColumn fx:id="netProfitTC" prefWidth="120.0" text="Net Profit" />
        </columns>
    </TableView>

    <Label layoutX="30.0" layoutY="325.0" text="Revenue:">
      <font>
         <Font size="15.0" />
      </font>
    </Label>
    <TextField fx:id="revenueTF" layoutX="140.0" layoutY="325.0" prefWidth="210.0" promptText="Enter revenue amount" />

    <Label layoutX="370.0" layoutY="325.0" text="Expenses:">
      <font>
         <Font size="15.0" />
      </font>
    </Label>
    <TextField fx:id="expensesTF" layoutX="450.0" layoutY="325.0" prefWidth="210.0" promptText="Enter expenses amount" />

    <Label layoutX="30.0" layoutY="360.0" text="Email Address:">
      <font>
         <Font size="15.0" />
      </font>
    </Label>
    <TextField fx:id="emailTF" layoutX="140.0" layoutY="360.0" prefWidth="210.0" promptText="Enter email address" />

    <Button layoutX="30.0" layoutY="410.0" onAction="#addReportONA" prefWidth="120.0" text="Add Report" />
    <Button layoutX="291.0" layoutY="410.0" onAction="#downloadpdfONA" prefWidth="120.0" text="Download PDF" />
    <Button layoutX="518.0" layoutY="410.0" onAction="#emailONA" prefWidth="120.0" text="Email Report" />
    <Label fx:id="notificationLabel" layoutX="45.0" layoutY="450.0" prefHeight="84.0" prefWidth="600.0" />
</AnchorPane>
